{
  "compilerOptions": {
    "outDir": "./dist/",
    "target": "es5",
    "lib": [
      "es2015", "dom", "DOM.Iterable"
    ],
    "sourceMap": true,
    "declaration": true,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules", "build"
  ]
}
